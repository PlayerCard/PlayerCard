
<h2>
  <%= @game.team.last.name %> @ <%= @game.team.first.name %>
</h2>
<p>
  Location:  <%= @game.game_location %> <br/>
  Start Time:  <%= @game.game_time %> <br/>
  Referee:  <%= @game.referee.name %>
</p>
<div class="team_titles">
  <%= link_to @game.team.first.name, @game.team.first %>
  <%= link_to @game.team.last.name, @game.team.last %>
</div>
<div class="team.first team">
  <% @game.team.last.line_up.each do |player| %>
    <div>
    <%= link_to player_path player do %>
      <%= image_tag player.profile.picture_url %>
    <% end %>
    <%= player.name %>
    <% if current_user.role == "referee"%>
      <%= link_to 'Book Player', new_game_card_path(@game.id)%>
    <% end %>
    </div>
  <% end %>

</div>

<div class="team.last team">
  <%= @game.home.team.line_up.each do |player| %>
    <div>
    <% link_to player_path player do %>
      <% image_tag player.profile.picture_url %>
    <% end %>
    <%= player.name %>
    <% if current_user.role == "referee"%>
      <%= link_to 'Book Player', new_game_card_path(@game.id)%>
    <% end %>
    </div>
  <% end %>
</div>
