<!-- picture, name, role, team, is manager -->

<% @profiles.each do |profile| %>
  <p>
    <%= image_tag profile.picture.url(:thumb) %>
    <div>
    <%= link_to "#{profile.name}", profile_path(profile.user) %>
    <div>
    <%= profile.role %>
    <div>
    <%= "member: " if profile.user.teams.length > 0 %>   
    <% profile.user.teams.each do |team| %>
      <%= team.name %>
    <% end %>
    <div>
    <% profile.user.team_memberships.each do |player| %>
      <% if player.is_manager %>
        <%= "team manager: #{player.team.name}" %>
      <% end %>
    <% end %>
  </p>
<% end %>
