<p id="notice"><%= notice %></p>

<%= image_tag @profile.picture.url(:medium) %>

<p><b>NAME: </b><%= @profile.name %></p>

<p><strong>Cards list</strong></p>
<% @cards.each do |card| %>
  <p><%= card.color %> | <%= card.created_at.strftime("Issued on %m/%d/%y") %></p>
<% end %>

<p><strong>Team List</strong></p>

<% @memberships.each do |membership| %>
  <p><%= link_to membership.team.name, membership.team %></p>
<% end %>

<%= link_to 'Back', :back %>
