<h1><%= @team.name %></h1>

<p><strong><%= link_to 'Edit team and lineup', edit_team_path(@team) %></strong></p>

<table>
  <tr>
    <th><strong>Managers</strong></th>
  </tr>
  <% @managers.each do |manager| %>
    <tr>
      <td><%= link_to manager.user.profile.name, profile_path(manager.user) %></td>
    </tr>
  <% end %>
</table>

<table>
  <tr><strong>Current Lineup</strong></tr>
  <% @current_lineup.each do |player| %>
    <tr>
      <td><%= link_to player.profile.name, profile_path(player) %></td>
    </tr>
  <% end %>
</table>

<table>
  <tr>
    <th><strong>Players not in lineup</strong></th>
  </tr>
  <% @not_in_lineup.each do |player| %>
    <tr>
      <td><%= link_to player.user.profile.name, profile_path(player.user) %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Edit', edit_team_path(@team) %> |
<%= link_to 'Back', teams_path %> |
<%= link_to('Delete', @team, method: :delete,
    data: { confirm: 'Are you sure?'}) %>
